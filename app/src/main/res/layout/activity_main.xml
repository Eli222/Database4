<?xml version="1.0" encoding="utf-8"?>



    <TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="Nombre?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_Nombre"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="nombre" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="Marca?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_Marca"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="marca" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Unidad?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_Unidad"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="unidad" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerta Min Stock?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_Alerta_Min_Stock"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="123" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerta Max Stock?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_Alerta_Max_Stock"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="123" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerta Low Useage Q?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_Alerta_Low_Consump_Quantity_SP"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="12" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerta Low Use Dias?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_Alerta_Low_Consump_Time_Dias_SP"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="123" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerta Inactivity Dias?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_Alerta_Inactivity_Time_Dias_SP"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="123" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerta Dias Before Expiration?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_Alerta_Expiration_Dias_Before_SP"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="123" />
        </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitor Alertas?"
            android:textAlignment="center"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/checkBox_Monitor_Alertas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check=Yes" />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </TableRow>

    <Button
        android:id="@+id/button_Insert_Data"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Insert Data" />

</TableLayout>



